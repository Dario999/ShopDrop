@model IEnumerable<ShopDrop.Models.Ad>

@{
    ViewBag.Title = "Index";
}

<br/>
<br/>
<button class="btn btn-light">
    @Html.ActionLink("Create New", "Create")
</button>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.date_posted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.is_sold)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.seller_id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.date_posted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.is_sold)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.seller_id)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
