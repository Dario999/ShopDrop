@model ShopDrop.Models.Product

@{
    ViewBag.Title = "Delete";
}

<section class="hero set-bg" data-setbg="../../Content/img/light4.jpg">

    <div class="container" style="margin-top: -200px !important;">
        <h3>Are you sure you want to delete this product?</h3>

            <hr style="border: 0.2px solid gray;"/>
            <dl class="dl-horizontal row">
                <div class="col-md-8">
                    <dt style="font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd style="font-size: 20px;">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <br />

                    <dt style="font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>

                    <dd style="font-size: 20px;">
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                    <br />

                    <dt style="font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Quantity)
                    </dt>

                    <dd style="font-size: 20px;">
                        @Html.DisplayFor(model => model.Quantity)
                    </dd>
                    <br />

                    <dt style="font-size: 20px;">
                        @Html.Label("Image ")
                    </dt>

                    <dd>
                        <img src='~/UserImages/@Model.Image' style="width: 310px; height: 200px" />
                    </dd>
                </div>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" style="width: 95px;"/> |
                    @Html.ActionLink("Back to List", "ShowMyProducts", null, new {@class="btn btn-default"})
                </div>
            }
        </div>
    </section>