@model ShopDrop.Models.Product

@{
    ViewBag.Title = "Details";
}


<div class="container">

    <div class="row">

        <div class="col-4" style="max-height: 400px;max-width: 400px">
            <img src='~/UserImages/@Model.Image' />
        </div>

        <div class="col-6">
            <h2>Product details:</h2>
            <br />
            <h5>@Model.Name</h5>
            <br />
            <p>@Model.Price $</p>
            <p>On stock: @Model.Quantity</p>
            <br />
            @Html.ActionLink("Order Now", "MyOrders", "Users", new { user_id = 1 }, null)
        </div>

    </div>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
