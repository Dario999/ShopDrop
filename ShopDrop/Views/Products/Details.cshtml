@using Microsoft.AspNet.Identity
@model ShopDrop.Models.Product

@{
    ViewBag.Title = "Details";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .kopce {
        font-size: 22px;
    }
</style>
<section class="hero set-bg" data-setbg="../../Content/img/light4.jpg">

    <div class="container" style="margin-top: -200px !important;">
        <div class="row">
            <div class="col-md-4">
                <img src='~/UserImages/@Model.Image' style="width: 500px;height: 270px" />
            </div>
            <div class="col-md-6">
                <div class="row">
                    <h5>@Model.Name</h5>
                </div>
                <br/>
                <div class="row" style="margin-top: -10px;">
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                </div>
                <div class="row" style="margin-top: 10px;">
                    Category: <span style="font-size: 20px;">@Model.category</span>
                </div>
                <hr style="border: 0.5px solid black; margin-left: -15px;" />
                <div class="row" style="margin-top: 10px;">
                    <p>@Model.description</p>
                </div>
                <div class="row">
                    <span style="font-size: 25px"><b>@Model.Price</b></span>
                    <span>$</span>
                    <span style="margin-left: 330px;">Posted on: @Model.date_posted</span>
                </div>
                <div class="row">
                    
                </div>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-1">
                <div class="row">
                    @if (@Model.Quantity == 0)
                    {
                        <p style="font-size: 35px; color: red;">Sold!</p>
                    }
                </div>
                <br/>
                <div class="row">
                    @if (@User.Identity.GetUserId() != @Model.selller_id)
                    {
                        if (@Model.Quantity == 0)
                        {
                            <button class="btn btn-success kopce" style="color: white; opacity: 0.3;">@Html.ActionLink("Order Now", "NewOrder", "Purchases", new { productId = Model.Id }, new { onclick = "javascript:return false;" })</button>
                        }
                        else
                        {
                            <button class="btn btn-success kopce" style="color: white;">@Html.ActionLink("Order Now", "NewOrder", "Purchases", new {productId = Model.Id}, null)</button>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>