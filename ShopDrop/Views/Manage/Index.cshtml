@model ShopDrop.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}


<section class="hero set-bg" data-setbg="../../Content/img/light4.jpg">
    <div class="container" style="margin-top: -200px !important;">


        <p class="text-success">@ViewBag.StatusMessage</p>
        <div>
            <h4>Change your account settings</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt style="font-size: 16px;">My Balance</dt>
                <dd>
                    <button class="btn btn-primary" style="font-size: 14px; background: lightblue;">
                        @Html.ActionLink("Balance", "Balance", "Users")
                    </button>
                </dd>
                <br />
                <dt style="font-size: 16px;">Password</dt>
                <dd>
                    [
                    @if (Model.HasPassword)
                    {
                        @Html.ActionLink("Change your password", "ChangePassword", null, new { @style = "font-size:14px;" })
                    }
                    else
                    {
                        @Html.ActionLink("Create", "SetPassword")
                    }
                    ]
                </dd>
            </dl>
        </div>
    </div>
</section>