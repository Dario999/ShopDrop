@model ShopDrop.Models.Product

@{
    ViewBag.Title = "New Order";
}

<section class="hero set-bg" data-setbg="../../Content/img/light4.jpg">

    <div class="container" style="margin-top: -200px !important;">
        <h5>New Order for item: @Model.Name</h5>
        <hr style="border: 0.5px solid gray;" />
        @using (Html.BeginForm("NewOrder", "Purchases", FormMethod.Post, new { productId = Model.Id }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">

                <div class="col-md-4">
                    <img src='~/UserImages/@Model.Image' style="width: 450px;height: 250px" />
                </div>
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="col-md-8">
                    <div class="row">
                        <h5>@Model.Name</h5>
                    </div>
                    <div class="row" style="margin-top: 10px;">
                        Category: <span style="font-size: 20px;">@Model.category</span>
                    </div>
                    <hr style="border: 0.5px solid gray; margin-left: -15px;" />
                    <div class="row" style="margin-top: 10px;">
                        <p>@Model.description</p>
                    </div>
                    <div class="row">
                        <span style="font-size: 25px"><b>@Model.Price</b></span>
                        <span>$</span>
                    </div>
                </div>
            </div>
                <div class="row" style="margin-left: 10px;">
                    <div class="col-md-4">
                        <div class="row">
                            <br/>
                            <div class="form-group">
                                <div class="col-md-7">
                                    <div class="col-md-10">
                                        <label for="quantity">
                                            Quantity: (max: @Model.Quantity)
                                        </label>
                                        <input type="number" id="quantity" name="quantity" min="0" max="@Model.Quantity" class="form-control"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-10" style="margin-left: 15px;">
                                    <b>Seller</b>: @Model.sellerName
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-10">
                                <span style="font-size: 25px"><b>Total: @((Model.Quantity * Model.Price))</b></span>
                                <span style="font-size: 20px">$</span>
                            </div>
                         </div>
                        
                        <br />
                        <br/>
                        <div class="row">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="NewOrder" class="btn btn-success" style="font-size: 20px;" />
                                    </div>
                                </div>
                            </div>

                        </div>
                </div>
            </div>
        }

        <div style="margin-top: 50px;">
            @Html.ActionLink("Back to Products", "Index", "Products")
        </div>
    </div>
    </section>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
